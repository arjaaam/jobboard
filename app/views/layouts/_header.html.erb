<div class="ui grey one inverted  menu">
    <%= link_to "JobBoard", jobs_path, class: "item" %>
      <div class="ui  dropdown">
        <input type="hidden" name="category_id">
          <div class="item" name="category_id">Categories</div>
            <div class="menu">
              <% @category.each do |cat| %>
                  <%=   link_to cat.name, root_path(:kategorije => cat.id), class: "item" %>
              <% end %>
            </div>
       </div>
    <div class="right menu">
      <div class="item">
        <div class="ui input focus">
          <%= form_tag root_path, :method => 'get' do %>
             <%= text_field_tag :search, params[:search] , placeholder: "Search by title, company .." %>
             <%= submit_tag "Search", :title=>nil, :name=>nil %>
           <% end %>
        </div>
      </div>
    </div>
 </div>
